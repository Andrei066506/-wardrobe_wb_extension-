{
  "manifest_version": 3,
  "name": "Wardrobe – Подбор образов",
  "version": "1.0",
  "description": "Подбирает модные образы на основе товара с Wildberries.",
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "https://www.wildberries.ru/*",
    "http://localhost:5000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*.wildberries.ru/catalog/*/detail.aspx*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}